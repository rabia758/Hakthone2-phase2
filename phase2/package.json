{
  "name": "todo-fullstack-app",
  "version": "1.0.0",
  "description": "Fullstack todo application with Next.js frontend and FastAPI backend",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev:backend": "cd backend && uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "backend": "cd backend && uvicorn src.main:app --reload",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "todo",
    "fullstack",
    "nextjs",
    "fastapi",
    "python",
    "react"
  ],
  "author": "",
  "license": "ISC"
}
